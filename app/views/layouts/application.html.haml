!!!
%html
  %head
    %title Opcoes
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      .header.span-24
        .menu
          %ul
            - if session[:manager].blank? && session[:builder].blank?
              %li= link_to 'Sign In', '/sign-in'
              %li= link_to 'Register', register_path
            - elsif !session[:manager].blank?
              %li= link_to 'Dashboard', :controller => 'manager', :action => :dashboard
            - elsif !session[:builder].blank?
              %li= link_to 'dashboard', :controller => 'builder', :action => :dashboard
        .logo= link_to 'Opções', '/' 
        .clear

      .content
        - if notice.class == String
          .notice= notice
        - if alert.class == String
          .alert= alert
        = yield

      .clear
      .footer.menu
        .span-1
          &nbsp;
        .span-7.menu-bordered
          &nbsp;
        .span-8.menu-bordered
          %ul
            %li= link_to 'Home', '/'
            %li= link_to 'About Us', about_us_path
            %li= link_to 'Privacy Policy', privacy_policy_path
        .span-8.last
          &nbsp;
        .clear
        .span-24
          .copyright
            Copyright &copy; 2012 CAC
        .height-100
    = render 'analytics'